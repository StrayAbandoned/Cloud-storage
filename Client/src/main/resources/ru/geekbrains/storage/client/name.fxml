<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.geekbrains.storage.client.NameController"
      alignment="CENTER">
    <TextField fx:id="nameOfFile" HBox.hgrow="ALWAYS" alignment="CENTER" onAction="#confirm"/>
    <Button fx:id="confirm" text="OK" onAction="#confirm">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </Button>
</VBox>
