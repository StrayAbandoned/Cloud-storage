<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.geekbrains.storage.client.MainController">
    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выйти из программы" onAction="#backToAuthentication"/>
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS" alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <VBox fx:id="loginbox" visible="true" managed="true">
            <HBox>
                <TextField fx:id="login" promptText="login" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets top="10.0" left="10.0" right="10.0"/>
                    </HBox.margin>
                </TextField>
                <PasswordField fx:id="password" promptText="password" HBox.hgrow="ALWAYS" onAction="#loginButtonClicked" >
                    <HBox.margin>
                        <Insets top="10.0" left="10.0" right="10.0"/>
                    </HBox.margin>
                </PasswordField>
                <Button fx:id="btnlog" onAction="#loginButtonClicked" text="Login" minWidth="100">
                    <HBox.margin>
                        <Insets top="10.0" right="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="btnreg" onAction="#registrationButtonClicked" text="Registration" minWidth="100">
                    <HBox.margin>
                        <Insets top="10.0" right="10.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
            <Label fx:id="info" minWidth="100" HBox.hgrow="ALWAYS" textAlignment="CENTER">
                <VBox.margin>
                    <Insets top="10.0" left="10.0" right="10.0"/>
                </VBox.margin>
            </Label>
        </VBox>

        <fx:include fx:id="localPanel" source="localPanel.fxml" HBox.hgrow="ALWAYS" visible="false" managed="false"/>
        <fx:include fx:id="remotePanel" source="remotePanel.fxml" HBox.hgrow="ALWAYS" visible="false" managed="false"/>

    </HBox>
</VBox>

