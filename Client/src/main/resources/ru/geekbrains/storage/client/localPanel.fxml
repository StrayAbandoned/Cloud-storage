<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ContextMenu?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.geekbrains.storage.client.LocalController">
    <HBox>
        <ComboBox fx:id="disks" onAction="#chooseDisk"/>
        <TextField fx:id="localPath" HBox.hgrow="ALWAYS" editable="false"/>
        <Button text="BACK" onAction="#back"/>
    </HBox>
    <TableView fx:id="localfiles" VBox.vgrow="ALWAYS" onMouseClicked="#goToDirectory">
        <ContextMenu fx:id="context">
            <items>
                <MenuItem fx:id="copy" mnemonicParsing="false" onAction="#copy" text="COPY"/>
                <MenuItem fx:id="paste" mnemonicParsing="false" onAction="#paste" text="PASTE"/>
                <MenuItem fx:id="delete" mnemonicParsing="false" onAction="#delete" text="DELETE"/>
                <MenuItem fx:id="rename" mnemonicParsing="false" onAction="#rename" text="RENAME"/>
                <MenuItem fx:id="new_folder" mnemonicParsing="false" onAction="#createNewDirectory"
                          text="NEW FOLDER"/>
            </items>
        </ContextMenu>
    </TableView>
    <Button text = "UPLOAD" focusTraversable="false" maxWidth="Infinity" HBox.hgrow="ALWAYS" onAction="#uploadFile"/>
